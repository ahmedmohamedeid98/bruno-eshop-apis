meta {
  name: update status
  type: http
  seq: 4
}

put {
  url: {{URL}}/api/v1/vendor/orders/2/status
  body: json
  auth: inherit
}

headers {
  Accept: application/json
  Authorization: Bearer {{VENDOR_TOKEN}}
}

body:json {
  {
      "status": "pending", // pending, processing, ready, cancelled
      "cancel_reason": null // required if the status is cancelled
  } 
}

